<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	xmlns:app="http://schemas.android.com/apk/res-auto"
   	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	
    <RelativeLayout
        android:id="@+id/sec_tag_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#F7F7F7"
        android:orientation="horizontal">
         
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/spinner_bg1"
            android:gravity="center_horizontal"
            android:spinnerMode="dropdown"
     		android:prompt="@string/spinner_prompt"/>
        
        <EditText 
            android:id="@+id/sec_tag"
            android:layout_width="match_parent"     
      		android:layout_height="match_parent"
      		android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="center|left"
      		android:background="#F7F7F7"
      		android:layout_toRightOf="@id/spinner"
            android:hint="填写二级标签(用空格分开)..."
            android:textColorHint="#30000000"
			android:textSize="15sp"
      		android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:maxLength="36"/>
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#30000000"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_alignBottom="@id/sec_tag"/> 
            
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="8"
   		android:orientation="vertical">
        
        <EditText 
            android:id="@+id/publish_content"
            android:hint="记录你的想法、创意、活动信息..."
            android:textColorHint="#40000000"
            android:gravity="top|left"
            android:paddingTop="8dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_width="match_parent"     
      		android:layout_height="match_parent"
      		android:background="#ffffff" 
      		android:focusable="true"
            android:focusableInTouchMode="true"
            android:maxLength="222"/>
           
         <ImageButton 
            android:id="@+id/pub_location"
            android:background="@drawable/pub_location_pressed"
            android:layout_width="36dp"     
      		android:layout_height="36dp"
      		android:layout_alignBottom="@id/publish_content"
      		android:layout_alignRight="@id/publish_content" 
      		android:layout_marginRight="10dp"
      		android:layout_marginBottom="5dp"/>
         
         <ImageButton 
            android:id="@+id/pub_pic"
            android:background="@drawable/pub_pic_pressed"
            android:layout_width="36dp"     
      		android:layout_height="36dp"
      		android:layout_alignBottom="@id/publish_content"
      		android:layout_toLeftOf="@id/pub_location" 
      		android:layout_marginRight="10dp"
      		android:layout_marginBottom="5dp"/>
         
         <ImageButton 
            android:id="@+id/pub_emoticon"
            android:background="@drawable/pub_emoticon"
            android:layout_width="36dp"     
      		android:layout_height="36dp"
      		android:layout_alignBottom="@id/publish_content"
      		android:layout_toLeftOf="@id/pub_pic" 
      		android:layout_marginRight="10dp"
      		android:layout_marginBottom="5dp"/>
         
         <ImageButton 
            android:id="@+id/pub_private"
            android:background="@drawable/pub_private_pressed"
            android:layout_width="36dp"     
      		android:layout_height="36dp"
      		android:layout_alignBottom="@id/publish_content"
      		android:layout_toLeftOf="@id/pub_emoticon" 
      		android:layout_marginRight="10dp"
      		android:layout_marginBottom="5dp"/>"
            
    </RelativeLayout>
        

</LinearLayout>
